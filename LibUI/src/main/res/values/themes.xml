<resources>
    <declare-styleable name="STextView">
        <attr name="corners" format="dimension"/>
        <attr name="topLeftRadius" format="dimension"/>
        <attr name="topRightRadius" format="dimension"/>
        <attr name="bottomLeftRadius" format="dimension"/>
        <attr name="bottomRightRadius" format="dimension"/>
        <attr name="strokeColor" format="color|reference"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="solidColor" format="color|reference"/>
        <attr name="startColor" format="color|reference"/>
        <attr name="endColor" format="color|reference"/>
        <attr name="gradientOrientation">
            <!-- Defines an horizontal widget. -->
            <enum name="LEFT_RIGHT" value="0" />
            <!-- Defines a vertical widget. -->
            <enum name="RIGHT_LEFT" value="1" />
            <enum name="BOTTOM_TOP" value="2" />
            <enum name="TOP_BOTTOM" value="3" />
            <enum name="BR_TL" value="4" />
            <enum name="BL_TR" value="5" />
            <enum name="TL_BR" value="6" />
            <enum name="TR_BL" value="7" />
        </attr>
    </declare-styleable>

</resources>